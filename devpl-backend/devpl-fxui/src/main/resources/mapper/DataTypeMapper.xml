<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.devpl.fxui.mapper.DataTypeItemMapper">

    <resultMap id="BaseResultMap" type="io.devpl.fxui.view.DataTypeItem">
        <result property="typeGroupId" column="type_group_id"/>
        <result property="typeKey" column="type_key"/>
        <result property="typeName" column="type_name"/>
        <result property="valueType" column="value_type"/>
    </resultMap>
    <insert id="insert" parameterType="io.devpl.fxui.view.DataTypeItem">
        INSERT INTO data_type_item (type_key, type_name) VALUES (#{param.typeKey}, #{param.typeName})
    </insert>

    <select id="selectPage" resultMap="BaseResultMap">
        SELECT *
        FROM data_type_item
        LIMIT #{page}, #{limit}
    </select>
    <select id="count" resultType="java.lang.Long">
        SELECT count(*)
        FROM data_type_item
    </select>
</mapper>
