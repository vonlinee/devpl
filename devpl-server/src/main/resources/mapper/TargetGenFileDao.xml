<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.devpl.generator.dao.TargetGenFileDao">

    <resultMap type="io.devpl.generator.entity.TargetGenFile" id="templateFileGenerationMap">
        <result property="pid" column="pid"/>
        <result property="fileName" column="file_name"/>
        <result property="templateId" column="template_id"/>
        <result property="savePath" column="save_path"/>
    </resultMap>

    <select id="selectGeneratedFileTypes" resultType="io.devpl.generator.entity.TargetGenFile">
        SELECT tfg.*, ti.template_name FROM target_gen_file tfg
            LEFT JOIN template_info ti on tfg.template_id = ti.template_id
    </select>

</mapper>
